---
interface Props {
  heroTitle?: string;
  pageTitle: string;
}

const { heroTitle, pageTitle } = Astro.props;
---

<section id="hero">
  <h1>{pageTitle}</h1>

  {
    heroTitle ? (
      <p class="video-container">
        <iframe
          class="video"
          src="https://www.youtube.com/embed/qNvlaxLiKuc"
          title={heroTitle}
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        />
      </p>
    ) : (
      <a href="https://masterflutterweb.carrd.co/">
        <div class="mt-10 mb-10 duration-200 ease-in hover:scale-105 hover:opacity-80">
          <img
            class="rounded-lg"
            src="/assets/course-cover.8a2dc722.jpg"
            alt="Flutter Web Course"
          />
        </div>
      </a>
    )
  }
</section>

<style>
  #hero {
    @apply pt-8 pb-6;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-6xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }

  .video-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
  }
  .video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
</style>
